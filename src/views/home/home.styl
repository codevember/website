colors_Load = ( #005872 #4d9aa9 #0e7286 #002029 )
.Home
  width 100%
  height 100%
  position relative
  display flex
  padding-top 70px
.Home-logo
  width 100%
  position absolute
  top 0
  left 20vw
  height 70px
  img
    height 70px
.Home-error
  margin 20px

.Home-loading
  position absolute
  top 40%
  left 50%
  width 120px
  height 30px
  transform translate(-50%,-50%)

.Point-loader
  width 20px
  height 20px
  background grey
  border-radius 10px
  margin 5px
  float left
  for i in (1..4)
    &:nth-child({i})
      animation Bounce ease-in-out infinite alternate both .4s
      animation-delay i*0.2s
      background colors_Load[i - 1]

@keyframes Bounce
  from
   transform translateY(0px)

  to
    transform translateY(10px)
