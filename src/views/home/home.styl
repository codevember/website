
.Home
  width 100%
  height 100%
  position relative
  display flex
  padding-top 20px

  &-left
    padding-top 20px
    padding-right 20px
    width 20vw

  &-main
    position relative
    width 80vw
    height calc(100vh - 90px)
    overflow-y auto

  &-logo
    width 100%
    height 70px

    img
      height 100%

  &-error
    margin 20px

+max-screen(tablet-max-width)
  .Home
    &-main
      width 87vw
      margin 0 auto

+max-screen(mobile-max-width)
  .Home
    &-logo
      height 50px

      img
        width 85%
        height auto
