.DaySelector
  position relative
  width 20vw
  height 100%
  flex-shrink 0
  background white
  color black
  padding-top 10px
  padding-left 10px
  &:after
    content ''
    width 40%
    height 10px
    position absolute
    right 0
    top 15px
    opacity 0.3
    background red
  ul
    display flex
    flex-direction column-reverse
    overflow-y scroll
    position absolute
    top -70px
    right 20px
    height 350px
    opacity 0
    li
      margin-top 5px
      text-align right
      font-size 1.1em
      &.hidden
        color grey

      &.isActive
        font-size 1.6em
