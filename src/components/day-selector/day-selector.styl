.DaySelector
  width 100%
  height 50vh
  flex-shrink 0
  overflow-x hidden
  overflow-y auto
  position relative

  ul
    display flex
    flex-direction column-reverse

    li
      margin-top 5px
      text-align right
      font-size 1.1em

      &.hidden
        opacity 0.5 !important
        font-size 1.1em

      &.spacer
        visibility hidden
        font-size 1.1em

      &.beforeActive,
      &.afterActive
        font-size 1.5em

      &.isActive
        @extend .font-title
        font-size 2em
        margin-bottom 5px
        position relative

        &:after
          content ''
          display block
          width 25%
          height 10px
          position absolute
          right 0
          top 25px
          opacity 0.3
          background medium-blue
