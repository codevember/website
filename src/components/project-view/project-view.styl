.ProjectView
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background white
  z-index 100
  display none

  &.isVisible
    display block

  &-close
    width 25px
    height 25px
    position absolute
    display block
    top 10px
    right 15px
    cursor pointer
    transition transform 0.3s

    &:hover
      transform rotate(90deg)

    &-line
      display block
      width 100%
      height 3px
      background dark-blue
      position absolute
      top 50%

      &--first
        transform translateY(-50%) rotate(45deg)

      &--second
        transform translateY(-50%) rotate(-45deg)

  iframe
    width calc(100% - 80px)
    height calc(100% - 80px)
    margin 40px
