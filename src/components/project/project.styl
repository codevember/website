.Project
  position relative
  margin 15px
  width 185px
  height 185px
  border 2px solid #BBB
  cursor pointer

  &-decoration
    display block
    position absolute
    bottom -25px
    left 18px
    background colors_Load[0]
    width 7px
    height 70px
    transform-origin top center
    transform scaleY(0)

  &:nth-child(2n)
    .Project-decoration
      background colors_Load[1]

  &:nth-child(2n+1)
    .Project-decoration
      background colors_Load[0]

  &:nth-child(3n)
    .Project-decoration
      background colors_Load[2]

  &:nth-child(4n)
    .Project-decoration
      background colors_Load[3]

  &-image
    width 100%
    height 100%

  &-infos
    position absolute
    bottom -23px
    left 30px
    overflow-x hidden

  &-title,
  &-author
    transform translateX(-100%)

  &-title
    color #002029
    font-size 1.5em
    margin-bottom 7px

+max-screen(mobile-max-width)
  .Project
    width 41vw
    height 41vw

    &-decoration
      bottom -20px
      transform scaleY(1)

    &-infos
      bottom -20px

    &-image
      opacity 0.2

    &-title,
    &-author
      transform translateX(0)

    &-title
      font-size 1.15em

    &-author
      font-size 0.9em
