offsetAnim = "30px"
colors_Load = ( #005872 #4d9aa9 #0e7286 #002029 )
random(min,max)
  return floor(math(0, 'random')*(max - min) + min)

.Project
  position relative
  margin 15px
  width 185px
  height 185px
  border 2px solid #BBB
  cursor pointer

.Project-decoration
  display block
  opacity 0
  position absolute
  bottom -25px
  left 0.5 * (18px - offsetAnim)
  background colors_Load[ random(0, 4) ]
  width 7px
  height 70px

.Project-image
  opacity 0
  width 100%
  height 100%

.Project-author
  opacity 0
  position absolute
  bottom -22px - offsetAnim
  left 30px

.Project-title
  opacity 0
  position absolute
  color #002029
  left 30px
  bottom 0px  - offsetAnim
  font-size 1.5em
